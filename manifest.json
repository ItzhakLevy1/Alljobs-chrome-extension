{
  "manifest_version": 3,
  "name": "alljobs chrome extension",
  "version": "1.0",
  "description": "Fileters out job search results",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://www.alljobs.co.il/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
